<div class="container">
  <div class="row">
    <div class="col-sm">

    </div>
    <div class="col-sm">
        <h1>Filter by:</h1>
        <br>
        <%= form_tag("/articles", method: "get") do %>
          <%= label_tag(:author_id, "Select author:") %>
          <%= collection_select(:user, :author_id, User.all, :id, :email, prompt: true) %>
          <%= submit_tag("Filter") %>
        <% end %>
        <br>
    </div>
    <div class="col-sm">

    </div>
  </div>
</div>

<h1>Listing Articles</h1>

<br>

<table class="table table-striped table-bordered table-hover">
  <%= paginate @articles %>
  <thead class="thead-dark">
  <tr>
    <th>Title</th>
    <th>Text</th>
    <th>Author</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <% @articles.each do |article| %>
    <tr>
      <td><%= article.title %></td>
      <td><%= article.text %></td>
      <td><%= article.author.email %></td>

      <td><%= link_to 'Show', article_path(article) %></td>
      <td><%= link_to 'Edit', edit_article_path(article) %></td>
      <td><%= link_to 'Destroy', article_path(article),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>

    </tr>
  <% end %>
</table>
<%= paginate @articles %>
